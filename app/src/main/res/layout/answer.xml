<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.sdsmdg.harjot.materialshadows.MaterialShadowViewWrapper
        tools:layout_editor_absoluteX="-155dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="blocksDescendants">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants">

            <ImageView
                android:id="@+id/backimgQuiz"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:elevation="5dp"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/blue_but_done" />


            <TextView
                android:id="@+id/AnswerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="62dp"
                android:elevation="5dp"
                android:text="Job Interview"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/backimgQuiz"
                app:layout_constraintStart_toStartOf="@+id/backimgQuiz"
                app:layout_constraintTop_toTopOf="@+id/backimgQuiz" />

            <RadioButton
                android:id="@+id/AnswerCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/backimgQuiz"
                app:layout_constraintStart_toStartOf="@+id/backimgQuiz"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.sdsmdg.harjot.materialshadows.MaterialShadowViewWrapper>

</androidx.constraintlayout.widget.ConstraintLayout>