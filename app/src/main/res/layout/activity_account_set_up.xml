<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEEA94"
    tools:context=".AccountSetUpActivity">


    <EditText
        android:id="@+id/inpFirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/field"
        android:ems="10"
        android:fontFamily="@font/lato_bold"
        android:hint="First Name"
        android:inputType="textPersonName"
        android:paddingLeft="30dp"
        android:textColor="#000000"
        android:textColorHint="#000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/inpLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/field"
        android:ems="10"
        android:fontFamily="@font/lato_bold"
        android:hint="Last Name"
        android:inputType="textPersonName"
        android:paddingLeft="30dp"
        android:textColor="#000000"
        android:textColorHint="#000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inpFirstName" />

    <Spinner
        android:id="@+id/lvlChoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/dropdown"
        android:dropDownWidth="wrap_content"
        android:popupBackground="@drawable/drp_bck"
        android:scrollbarSize="0dp"
        android:spinnerMode="dropdown"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:verticalScrollbarPosition="defaultPosition"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inpLastName" />

    <Button
        android:id="@+id/SetUpBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:background="@drawable/whitebtn"
        android:fontFamily="@font/lato_bold"
        android:textAllCaps="false"
        android:textColor="#000"
        android:textSize="20sp"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>